<%- include("partials/header") %>

<div class="ui main text container segment">
<div class="ui huge header">Edit Blog - <%= article.title %></div>

<form class="ui form" action="/blog/<%= article._id %>?_method=PUT" method="POST">
    <div class="field">
        <label>Title: <input type="text" name="blog[title]" required value="<%= article.title %>"> </label>
    </div>
    <div class="field">
        <label>Image: <input type="text" name="blog[image]" required value="<%= article.image %>"> </label>
    </div>
    <div class="field">
        <label>Blog Post: <textarea name="blog[body]" required> <%- article.body %> </textarea> </label>
    </div>
    <div class="field">
    <input type="submit" class="ui purple basic button">
    </div>
    
</form>
    </div>

<%- include("partials/footer") %>