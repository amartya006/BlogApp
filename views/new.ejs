<%- include("partials/header") %>

<div class="ui main text container segment">
<div class="ui huge header">Add New Blog</div>

<form class="ui form" action="/blog" method="post">
    <div class="field">
        <label>Title: <input type="text" name="blog[title]" required placeholder="Title"> </label>
    </div>
    <div class="field">
        <label>Image: <input type="text" name="blog[image]" required placeholder="Image URL"> </label>
    </div>
    <div class="field">
        <label>Blog Post: <textarea name="blog[body]" required placeholder="Your Blog Goes Here....."></textarea> </label>
    </div>
    <div class="field">
    <input type="submit" class="ui purple basic button">
    </div>
    
</form>
    </div>

